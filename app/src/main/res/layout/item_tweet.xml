<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="5dp">



    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:transitionName="userImage"/>

    <com.codepath.apps.mysimpletweets.LinkifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvBody"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLines="5"
        android:transitionName="tweetText"
        android:autoLink="all"
        android:linksClickable="true"

        android:gravity="left"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_below="@+id/tvUserName"
        android:paddingLeft="5dp"
        android:lineSpacingExtra="1dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="16sp"
        android:textStyle=""
        />
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvHandle"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_toRightOf="@+id/tvUserName"
        android:layout_toEndOf="@+id/tvUserName"
        android:textColor="@color/grey2"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0m"
        android:textColor ="@color/grey2"
        android:id="@+id/tvTimeDifference"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvBody"
        android:layout_alignEnd="@+id/tvBody" />

    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey2"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:id="@+id/barrier"
        android:layout_below="@id/tvBody" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ivProfileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>


</RelativeLayout>